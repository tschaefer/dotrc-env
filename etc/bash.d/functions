# superuser - use given bash docs
function root {
	case ${OS} in
		Darwin)
			sudo -i '/opt/local/bin/bash --rcfile /Users/${SUDO_USER}/.bashrc'
			;;
		Linux)
			sudo su -c '/bin/bash --rcfile /home/${SUDO_USER}/.bashrc'
			;;
	esac
}

# nano for superuser
function rnano {
	[ ${EUID} -ne 0 ] && {
		return 1
	}

	case ${OS} in
		Darwin)
			export HOME=${ENV_HOME}
			nano $@
			export HOME=/var/root
			;;
		Linux)
			export HOME=${ENV_HOME}
			nano $@
			export HOME=/root
			;;
	esac
}

# vim for superuser
function rvim {
	[ ${EUID} -ne 0 ] && {
		return 1
	}

	case ${OS} in
		Darwin)
			export HOME=${ENV_HOME}
			vim -u ${ENV_HOME}/.vimrc $@
			export HOME=/var/root
			;;
		Linux)
			export HOME=${ENV_HOME}
			vim -u ${ENV_HOME}/.vimrc $@
			export HOME=/root
			;;
	esac
}

# vim: set filetype=sh :
