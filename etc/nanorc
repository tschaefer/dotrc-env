## Stop at word ends (key shortcut)
# set afterends

## Wrap lines at blanks.
# set atblanks

## Use auto-indentation.
set autoindent

## Back up files to the current filename plus a tilde.
# set backup

## The directory to put unique backup files in.
# set backupdir ""

## Use bold text instead of reverse video text.
set boldtext

## Treat any line with leading whitespace as the beginning of a paragraph.
# set bookstyle

## Closing brackets when justifying paragraphs.
# set brackets ""')>]}"

## Automatically hard-wrap current line.
# set breaklonglines

## Do case-sensitive searches by default.
# set casesensitiv

## Constantly display the cursor position in the statusbar.
set constantshow

## Use cut-from-cursor-to-end-of-line by default.
set cutfromcursor

## Do not use the line below the title bar, leaving it entirely blank.
# set emptyline

## Target width for automatic hard-wrapping (terminal width minus number).
# set fill -8

## Remember the used search/replace strings for the next session.
# set historylog

## Display a "scrollbar" on the righthand side of the edit window.
# set indicator

## Scroll the buffer contents per half-screen instead of per line.
# set jumpyscrolling

## Display line numbers to the left (and any anchors in the margin).
set linenumbers

## Enable vim-style lock-files.
# set locking

## libmagic to determine applicable syntax.
# set magic

## The opening and closing brackets for searches.
# set matchbrackets "(<[{)>]}"

## Enable mouse support.
# set mouse

## Allow multiple file buffers.
set multibuffer

## Don't convert files from DOS/Mac format.
# set noconvert

## Don't display shortcut list.
# set nohelp

## Don't automatically add a newline at end of file.
# set nonewlines

## Set operating directory (chroot).
# set operatingdir ""

## Remember cursor position in each file.
# set positionlog

## PresPreserve the XON and XOFF keys (^Q and ^S).
# set preserve

## The characters treated as closing punctuation when justifying.
# set punct "!.?"

## Do quick status-bar blanking.
# set qucikblank

## The regular expression that matches quoting characters.
# set quotestr "^([ 	]*([!#%:;>|}]|//))+"

## Try to work around a mismatching terminfo terminal description.
# set rawsequences

## Fix Backspace/Delete confusion problem.
# set rebinddelete

## Do regular-expression searches by default.
set regexp

## Save a changed buffer automatically on exit; don't prompt.
# set saveonexit

## Enable cursor braille.
# set showcursor

#Jump to first non-whitespace characters or beginning of line.
set smarthome

## Spread overlong lines over multiple screen lines.
# set softwrap

## Don't wrap text at all.
set nowrap

## Use external spelling checker.
# set speller "aspell -x -c"

## Use the end of the title bar for some state flags: I = auto-indenting,
## M = mark, L = hard-wrapping long lines, R = recording, S = soft-wrapping.
set stateflags

## Allow nano to be suspended (with ^Z by default).
set suspendable

## Use this tab size instead of the default; it must be greater than 0.
set tabsize 4

## Convert typed tabs to spaces.
set tabstospaces

## Snip whitespace at the end of lines when justifying or hard-wrapping.
set trimblanks

## Single-column characters used to display tabs and spaces.
# set whitespace "»·"

## Detect word boundaries by punctation.
# set wordbounds

## Characters that should be considered as part of words.
# set wordchars "<_>."

## Backspace or Delete erase marked region.
# set zap

## Color setup
include "~/.nano/*.nanorc"

# vim:ft=conf
