## ssh
function ssh.screen {
    ssh $@ -t screen -Rd
}

function ssh.sock {
    SSH_AUTH_SOCK=$(find /tmp -maxdepth 2 -type s -name "agent*" -user $USER \
        -printf '%T@ %p\n' 2>/dev/null |sort -n|tail -1|cut -d' ' -f2)
    export SSH_AUTH_SOCK
}

## pip
function pip.up {
    pip install --user --upgrade $(pip list --user --format=columns | \
        awk 'FNR > 2 {print $1 }')
}

## perl
function perl.up {
    cpan-outdated | cpanm
}

# vim:ft=sh
