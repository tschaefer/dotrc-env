## ssh screen
function sshs {
    ssh $@ -t screen -R
}

## colored ls
function cls {
largs=(
    -Fl
    --color=auto
    --group-directories-first
    --time-style=$'+ %F\n%m-%d %H:%M'
    -q
)
ls "${largs[@]}" $@ | colored_ls
}

## irssi
function irssi.xchannel {
    read -p "xchannel user: " XCHUSER
    read -s -p "xchannel password: " XCHPW
    XCHUSER=${XCHUSER} XCHPW=${XCHPW} irssi
}

## aiccu
function aiccu.sixxs {
    read -p "sixxs tunnel user: " SIXXSUSER
    read -s -p "sixxs tunnel password: " SIXXSPW
    AICCUTMPCONF=$(mktemp)
    cat ${ENV_HOME}/.aiccu.conf > ${AICCUTMPCONF}
    sed -i '' "s:%USERNAME%:${SIXXSUSER}:" ${AICCUTMPCONF}
    sed -i '' "s:%PASSWORD%:${SIXXSPW}:" ${AICCUTMPCONF}
    sudo aiccu start ${AICCUTMPCONF}
    sleep 2
    rm -f ${AICCUTMPCONF}
}

# vim:ft=sh
