## ssh screen
function sshs {
    ssh $@ -t screen -R
}

## colored ls
function cls {
largs=(
    -Fl
    --color=auto
    --group-directories-first
    --time-style=$'+ %F\n%m-%d %H:%M'
    -q
)
ls "${largs[@]}" $@ | colored_ls
}

## irssi
function irssi.xchannel {
    IFS=':' read -s -p "Xchannel Credentials: " -r -a XCH
    XCHUSER=${XCH[0]} XCHPW=${XCH[1]} irssi
}

# vim:ft=sh
