## aliases
alias airport='sudo /System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport'
alias brew="HOMEBREW_GITHUB_API_TOKEN=ebc334679ab9259b7887cbd63329269092d231b3 /usr/local/bin/brew"
alias finder="open"
alias preview="open -a Preview"
alias vlc="open -a VLC"

## exports
if [[ ! $PATH == *"${ENV_HOME}/.perl5/bin"* ]]; then
    PATH=${ENV_HOME}/.perl5/bin:${PATH}
fi
PERL5LIB=${ENV_HOME}/.perl5/lib/perl5
PERL_LOCAL_LIB_ROOT=${ENV_HOME}/.perl5
PERL_MB_OPT="--install_base \"${ENV_HOME}/.perl5\""
PERL_MM_OPT="INSTALL_BASE=${ENV_HOME}/.perl5"

export PATH PERL5LIB PERL_LOCAL_LIB_ROOT PERL_MB_OPT PERL_MM_OPT

