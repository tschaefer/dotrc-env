[github]
    user = tschaefer

[core]
    pager = cat
    editor = vim
    excludesFile = /home/tschaefer/.git/gitignore

[color]
    ui = true
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[alias]
    ci = commit
    co = checkout
    flog = log --stat
    slog = log --pretty=oneline --abbrev-commit
    sflog = log --pretty=oneline --abbrev-commit --stat
    sstatus = status --short
    fdiff = !git diff --color | diff-so-fancy | less --tabs=4 -RFX
    adog = log --all --decorate --oneline --graph
    sdiff = diff --stat

[apply]
    whitespace = strip

[diff]
    color = auto
    rename = copy

[pager]
    color = true

[status]
    color = auto

[push]
    default = simple

[pull]
    ff = only

[init]
    defaultBranch = main

# vim:ft=dosini
