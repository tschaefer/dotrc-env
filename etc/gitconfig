    co = checkout
    flog = log --stat
    slog = log --pretty=oneline --abbrev-commit
    sflog = log --pretty=oneline --abbrev-commit --stat
    sstatus = status --short
    pdiff = !git --no-pager diff
    adog = log --all --decorate --oneline --graph
    sdiff = diff --stat
    mstatus = !git sstatus | grep -v '??' | grep -v 'A '
    bush = !git push

