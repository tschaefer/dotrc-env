[core]
	pager = less
	editor = vim

[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[alias]
	log-graph = !git log --graph --date-order -C -M --pretty=format:'%C(yellow)%h%Creset %ad %Cgreen%d%Creset %s' --all --date=short
	log-details = !git log --stat --abbrev-commit
	status-remote = !git fetch && git diff --name-only ..origin
	tag-list = tag -l
	branch-list = branch -a
	branch-remotes = remote -v
	merge-undo = reset --hard HEAD
	ci = commit
	co = checkout
	stat = status

[diff]
	color = auto
	rename = copy

[pager]
	color = true

[status]
	color = auto

# vim: set filetype=dosini :
