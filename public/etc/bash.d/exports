# set enhance path
case ${OS} in
	Darwin)
		export PATH=${ENV_HOME}/bin:${PATH_PREFIX}/libexec/gnubin:${PATH_PREFIX}/bin:${PATH_PREFIX}/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/X11/bin
		;;
	Linux)
		export PATH=${ENV_HOME}/bin:/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:/usr/games
		;;
esac

# export some pathes
case ${OS} in
	Darwin)
		# gnu manpages
		if [ -e "/usr/local/gnuman" ]; then
			export MANPATH="/usr/local/gnuman:$MANPATH"
		fi
		# xml dtd files
		export XML_CATALOG_FILES="/usr/local/etc/xml/catalog"
		;;
	Linux)
		# xml dtd files
		export XML_CATALOG_FILES="/etc/xml/catalog"
		;;
esac

# set term in fbterm
if [ ${FBTERM} ]; then
	if [ ${FBTERM} == "started" ]; then
		export TERM=fbterm
		FBTERM="exported"
	fi
fi

# set root (sudo) home on darwin
if [ ${EUID} -eq 0 -a ${OS} == "Darwin" ]; then
	export HOME=/var/root
fi

# ignore dupes and whitespaces in history
export HISTCONTROL=ignoreboth
# larger bash history (allow 32Â³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
# make some commands not show up in history
export HISTIGNORE="cd:cd -:pwd;exit:date:"

# locale settings
export LANG="de_DE.UTF-8"
export LC_MESSAGES="en_US.UTF-8"

# use vim alternatively nano as editor
if [ $(type -P vim 2>/dev/null) ]; then
	export EDITOR=vim
elif [ $(type -P nano 2>/dev/null) ]; then
	export EDITOR=nano
fi

# compression on gzip and bzip2
export GZIP="-9 -v --name"
export BZIP2="-9 -v"

# vim: set filetype=sh :
