# ls and grep colors aliases
if [ $(type -P dircolors 2>/dev/null) ]; then
	eval "$(dircolors -b)"
	alias ls='ls --color=auto'
	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
fi

# more ls aliases
alias ll='ls -l'
alias la='ls -A'
alias lh='ls -l -h'
alias lt='ls -l -t'

# less with syntaxhighlighting and 'unzipper'
for version in {0..9}; do 
	if [ -x /usr/share/vim/vim7${version}/macros/less.sh ]; then
		alias less=/usr/share/vim/vim7${version}/macros/less.sh
	fi
done

# vim full color featured
alias vim='env TERM=xterm-256color vim'

# public inet address infos
alias pubip="dig +short myip.opendns.com @resolver1.opendns.com"

# fbterm with 256 colors
alias fbterm='FBTERM="started" /usr/bin/fbterm'

# magnificent app which corrects your previous console command
if [ $(type -P thefuck 2>/dev/null) ]; then
	eval "$(thefuck --alias)"
fi

# htop path to config
alias htop="HTOPRC=${HOME}/.htoprc htop"

# vim: set filetype=sh :
