# set fancy and colorful prompt
if [ ${EUID} -eq 0 ]; then
	PS1='\[\033[00;31m\][vim]: \[\033[00;31m\]\u\[\033[00m\]@\[\033[00;34m\]\h\[\033[00m\]:\W\$ ' # superuser
else
	PS1='\[\033[00;31m\][vim]: \[\033[00;37m\]\u\[\033[00m\]@\[\033[00;34m\]\h\[\033[00m\]:\W\$ ' # normal user
fi

